@model PortalAcademico.Models.Curso

@{
    ViewData["Title"] = "Detalles del Curso";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>@Model.Codigo - @Model.Nombre</h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Código:</dt>
                    <dd class="col-sm-8">@Model.Codigo</dd>

                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Créditos:</dt>
                    <dd class="col-sm-8">@Model.Creditos</dd>

                    <dt class="col-sm-4">Cupo Máximo:</dt>
                    <dd class="col-sm-8">@Model.CupoMaximo estudiantes</dd>

                    <dt class="col-sm-4">Horario:</dt>
                    <dd class="col-sm-8">@Model.HorarioInicio.ToString(@"hh\:mm") - @Model.HorarioFin.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-4">Estado:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Volver al Catálogo</a>
                
                <!-- Botón Inscribirse - Solo muestra si el curso está activo -->
                @if (Model.Activo)
                {
                    <form asp-controller="Matriculas" asp-action="Create" method="post" class="d-inline">
                        <input type="hidden" name="cursoId" value="@Model.Id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary" onclick="return confirm('¿Estás seguro de que quieres inscribirte en este curso?')">
                            Inscribirse
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>