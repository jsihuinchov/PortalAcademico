@model PortalAcademico.Models.Curso

@{
    ViewData["Title"] = "Crear Curso";
}

<h1>Crear Nuevo Curso</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Creditos" class="control-label"></label>
                        <input asp-for="Creditos" class="form-control" min="1" max="10" />
                        <span asp-validation-for="Creditos" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CupoMaximo" class="control-label"></label>
                        <input asp-for="CupoMaximo" class="form-control" min="1" max="50" />
                        <span asp-validation-for="CupoMaximo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HorarioInicio" class="control-label"></label>
                        <input asp-for="HorarioInicio" class="form-control" type="time" />
                        <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HorarioFin" class="control-label"></label>
                        <input asp-for="HorarioFin" class="form-control" type="time" />
                        <span asp-validation-for="HorarioFin" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="Activo" />
                <label class="form-check-label" asp-for="Activo"></label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Crear Curso</button>
                <a asp-action="Index" class="btn btn-secondary">Volver al Panel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}