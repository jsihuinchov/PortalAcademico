@model IEnumerable<PortalAcademico.Models.Curso>

@{
    ViewData["Title"] = "Panel de Coordinador";
}

<h1>Panel de Coordinador</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Curso</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Cupo</th>
            <th>Horario</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Creditos</td>
                <td>@item.CupoMaximo</td>
                <td>@item.HorarioInicio.ToString(@"hh\:mm") - @item.HorarioFin.ToString(@"hh\:mm")</td>
                <td>
                    @if (item.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Matriculas" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver Matrículas</a>
                </td>
            </tr>
        }
    </tbody>
</table>